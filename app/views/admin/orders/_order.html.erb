<div id="<%= dom_id order %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Customer email:</strong>
    <%= order.customer_email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </div>
  <% if order.order_products.any? %>
    <strong class="block font-medium mb-1">Products: </strong>
    <% order.order_products.each do |op| %>
      <%= op.product.name %>
      <%= op.size %>
      <%= op.quantity %>
    <% end %>
  <% end %>
  <% if action_name != "show" %>
    <%= link_to "Show this order", admin_order_path(order), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
