<%= form_with(model: [:admin, @category], local: true, class: "contents") do |form| %>
  <% if @category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul class="list-disc ml-6">
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, 
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", 
          @category.errors[:name].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
        ] 
    %>
    <% if @category.errors[:name].any? %>
      <p class="text-red-500 text-sm mt-1"><%= @category.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, 
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", 
          @category.errors[:description].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
        ] 
    %>
    <% if @category.errors[:description].any? %>
      <p class="text-red-500 text-sm mt-1"><%= @category.errors[:description].first %></p>
    <% end %>
  </div>

<div class="my-5">
    <%= form.label :image %>
    <%= form.file_field :image, rows: 4, 
        class: [
          "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", 
          @category.errors[:description].any? ? "border-red-400 focus:outline-red-600" : "border-gray-400 focus:outline-blue-600"
        ] 
    %>
    <% if @category.errors[:description].any? %>
      <p class="text-red-500 text-sm mt-1"><%= @category.errors[:description].first %></p>
    <% end %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>